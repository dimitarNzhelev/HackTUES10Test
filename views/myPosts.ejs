<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

  <style>
    .post-container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .post-image {
      margin-top: 20px;
      width: 300px;
      height: 300px;
    }

    .post-buttons {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    .like-button {
      background-color: transparent;
      border: none;
      cursor: pointer;
      display: inline-block;
    }

    .like-button i {
      font-size: 24px;
      color: #888;
    }

  </style>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>My Posts</title>
  <script>
function deletePost(id) {
      console.log(id);
      fetch(`/dashboard/myposts/${id}`, {
        method: 'DELETE'
      })
      .then(response => {
        if (response.ok) {
          window.location.href = '/dashboard';
        } else {
          console.error('Failed to delete post');
        }
      })
      .catch(error => {
        console.error('Failed to delete post:', error);
      });
    }

function updatePost(id) {
      window.location.href = `/dashboard/myposts/${id}/update`;
    }

function likePost(id, isLiked) {
  const likeButton = document.getElementById(`like-button-${id}`);
  const likeIcon = likeButton.querySelector('i');

  if (isLiked) {
    likeButton.classList.remove('liked');
    likeIcon.classList.remove('fas', 'fa-heart');
    likeIcon.classList.add('far', 'fa-heart');
  } else {
    likeButton.classList.add('liked');
    likeIcon.classList.remove('far', 'fa-heart');
    likeIcon.classList.add('fas', 'fa-heart');
  }

  fetch(`/dashboard/myposts/${id}/like`, {
    method: 'POST'
  })
    .then(response => {
      if (response.ok) {
      } else {
        console.error('Failed to like post');
      }
    })
    .catch(error => {
      console.error('Failed to like post:', error);
    });
}

async function isLiked(id) {
  try {
    const response = await fetch(`/dashboard/myposts/${id}/likeStatus`, {
      method: 'GET'
    });

    if (response.ok) {
      const data = await response.json();
      const likeStatus = data.likeStatus;
      likePost(id, likeStatus);
    } else {
      throw new Error('Failed to fetch like status');
    }
  } catch (error) {
    console.error('Error:', error);
  }
}

  </script>
</head>
<body>
  <h1>My posts</h1>

  <% if(typeof posts != "undefined") { %>
    <% posts.forEach(post => { %>
      <div class="post-container">
        <img class="post-image" src="<%= post.imageUrl %>" />
        <div class="post-buttons">
          <button onclick="deletePost('<%= post.id %>')">Delete</button>
          <button onclick="updatePost('<%= post.id %>')">Update</button>
          <button id="like-button-<%= post.id %>" class="like-button" onclick="isLiked('<%= post.id %>')">
            <i class="fas fa-heart<%= post.liked ? ' liked' : '' %>"></i>
          </button>
        </div>
      </div>
    <% }) %>
  <% } %>
</body>
</html>
